<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tutor_App.HomePage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Tutor Find"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />


            <StackLayout>
                <Button x:Name="BtnTutors" WidthRequest="200" BackgroundColor="GreenYellow"  Text="Browse Tutors" Clicked="BtnTutors_Clicked"/>
                <Button x:Name="BtnStudents" WidthRequest="200" BackgroundColor="GreenYellow"  Text="Browse Students" Clicked="BtnStudents_Clicked"/>


            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>